      "chart": {
        "$type": "color",
        "$value": "#1a1a1a",
        "$description": "Primary chart container background"
      },
      "elevated": {
        "$type": "color",
        "$value": "#2a2a2a",
        "$description": "Elevated surfaces, borders, grid lines"
      }
    },
    "text": {
      "primary": {
        "$type": "color",
        "$value": "#f5f5f5",
        "$description": "Primary text, titles, headings"
