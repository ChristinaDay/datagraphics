{
  "$metadata": {
    "name": "Operational Data Graphics",
    "description": "Design tokens for operational data visualization system with light and dark modes",
    "version": "2.0.0"
  },
  "color": {
    "mode": {
      "dark": {
        "background": {
          "canvas": {
            "$type": "color",
            "$value": "#0d0d0d",
            "$description": "Darkest background for page canvas"
          },
          "chart": {
            "$type": "color",
            "$value": "#171719",
            "$description": "Primary chart container background"
          },
          "elevated": {
            "$type": "color",
            "$value": "#2a2a2a",
            "$description": "Elevated surfaces, borders"
          }
        },
        "text": {
          "primary": {
            "$type": "color",
            "$value": "#D9D9E0",
            "$description": "Primary text, titles, headings"
          },
          "secondary": {
            "$type": "color",
            "$value": "#999AA6",
            "$description": "Secondary text, axis labels"
          },
          "muted": {
            "$type": "color",
            "$value": "#6b7280",
            "$description": "Muted text, footnotes"
          }
        },
        "border": {
          "default": {
            "$type": "color",
            "$value": "#33353A",
            "$description": "Default borders"
          },
          "grid": {
            "$type": "color",
            "$value": "#4D4E56",
            "$description": "Grid lines (use at 40% opacity)"
          }
        }
      },
      "light": {
        "background": {
          "canvas": {
            "$type": "color",
            "$value": "#ffffff",
            "$description": "Lightest background for page canvas"
          },
          "chart": {
            "$type": "color",
            "$value": "#f9fafb",
            "$description": "Primary chart container background"
          },
          "elevated": {
            "$type": "color",
            "$value": "#f3f4f6",
            "$description": "Elevated surfaces, borders"
          }
        },
        "text": {
          "primary": {
            "$type": "color",
            "$value": "#1a1a1a",
            "$description": "Primary text, titles, headings"
          },
          "secondary": {
            "$type": "color",
            "$value": "#6b7280",
            "$description": "Secondary text, axis labels"
          },
          "muted": {
            "$type": "color",
            "$value": "#9ca3af",
            "$description": "Muted text, footnotes"
          }
        },
        "border": {
          "default": {
            "$type": "color",
            "$value": "#e5e7eb",
            "$description": "Default borders"
          },
          "grid": {
            "$type": "color",
            "$value": "#d1d5db",
            "$description": "Grid lines (use at 40% opacity)"
          }
        }
      }
    },
    "categorical": {
      "blue": {
        "$type": "color",
        "$value": "#3B82F5",
        "$description": "Primary data series"
      },
      "green": {
        "$type": "color",
        "$value": "#22BF4A",
        "$description": "Secondary data series"
      },
      "yellow": {
        "$type": "color",
        "$value": "#F2CB05",
        "$description": "Tertiary data series"
      },
      "orange": {
        "$type": "color",
        "$value": "#F28500",
        "$description": "Quaternary data series"
      },
      "violet": {
        "$type": "color",
        "$value": "#8B5CF6",
        "$description": "Quinary data series"
      }
    },
    "status": {
      "success": {
        "$type": "color",
        "$value": "#22BF4A",
        "$description": "Healthy, success, operational"
      },
      "warning": {
        "$type": "color",
        "$value": "#F28500",
        "$description": "Degraded, warning, attention needed"
      },
      "error": {
        "$type": "color",
        "$value": "#CC3D3D",
        "$description": "Down, error, critical"
      },
      "unknown": {
        "$type": "color",
        "$value": "#6b7280",
        "$description": "Unknown, no data, n/a"
      }
    }
  },
  "spacing": {
    "base": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Base unit for spacing scale"
    },
    "1": {
      "$type": "dimension",
      "$value": "4px"
    },
    "2": {
      "$type": "dimension",
      "$value": "8px"
    },
    "3": {
      "$type": "dimension",
      "$value": "12px"
    },
    "4": {
      "$type": "dimension",
      "$value": "16px"
    },
    "6": {
      "$type": "dimension",
      "$value": "24px"
    },
    "8": {
      "$type": "dimension",
      "$value": "32px"
    },
    "10": {
      "$type": "dimension",
      "$value": "40px"
    },
    "15": {
      "$type": "dimension",
      "$value": "60px"
    }
  },
  "typography": {
    "family": {
      "sans": {
        "$type": "fontFamily",
        "$value": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": "JetBrains Mono, 'SF Mono', Consolas, monospace"
      }
    },
    "size": {
      "micro": {
        "$type": "dimension",
        "$value": "10px"
      },
      "caption": {
        "$type": "dimension",
        "$value": "12px"
      },
      "label": {
        "$type": "dimension",
        "$value": "14px"
      },
      "body": {
        "$type": "dimension",
        "$value": "16px"
      },
      "display": {
        "$type": "dimension",
        "$value": "20px"
      }
    }
  },
  "chart": {
    "padding": {
      "top": {
        "$type": "dimension",
        "$value": "10px"
      },
      "left": {
        "$type": "dimension",
        "$value": "60px"
      },
      "right": {
        "$type": "dimension",
        "$value": "20px"
      },
      "bottom": {
        "$type": "dimension",
        "$value": "40px"
      }
    },
    "strokeWidth": {
      "line": {
        "$type": "dimension",
        "$value": "2px"
      },
      "bar": {
        "$type": "dimension",
        "$value": "1px"
      }
    }
  },
  "opacity": {
    "grid": {
      "$type": "number",
      "$value": 0.4
    },
    "hover": {
      "$type": "number",
      "$value": 0.85
    },
    "active": {
      "$type": "number",
      "$value": 1.0
    }
  }
}
